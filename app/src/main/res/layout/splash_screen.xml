<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splashScreen">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"

        android:background="@drawable/main_screen_bg"
        android:layout_height="65mm">

        <ImageView

            android:background="@drawable/bg"
            android:layout_marginTop="100px"
            android:layout_width="50mm"
            android:layout_height="51mm"/>




    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="65mm"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:text="Sri Lanka-Driving License Exam Quiz"
            android:textSize="20dp"
            android:fontFamily="@font/lacamedium"
            android:textColor="#0F87E2"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:text="APP name is an offline platform target for Sri Lankan Driving License Exam.this app will be help to improve your skills"
            android:textSize="18dp"
            android:fontFamily="@font/acuminvariableconcept"
            android:textColor="#09001C"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:padding="2dp"
            android:text="Next"
            android:background="@drawable/next_buttton"
            android:layout_height="40dp" />


    </LinearLayout>


</RelativeLayout>